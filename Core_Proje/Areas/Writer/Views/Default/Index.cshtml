@model List<EntityLayer.Concrete.Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = ""; // Burada "red" değerini atadım.
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var x in Model)
                        {
                            if(x.Status=="Yeni Yazı")
                            {
                                color = "badge badge-danger";
                            }
                            if (x.Status == "Yeni Video")
                            {
                                color = "badge badge-warning";
                            }
                            if (x.Status == "Yeni Video")
                            {
                                color = "badge badge-info";
                            }
                            <tr>
                            <td>@x.ID</td>
                            <td>@x.Title</td>
                            <td>@x.Date</td>
                            <td> <label class="@color">@x.Status</label> </td>
                                <td> <a href="/Writer/Default/AnnouncementDetails/@x.ID" class="btn btn-primary">Detaylar</a> </td>
                        </tr> 
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

